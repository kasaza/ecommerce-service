# Django Settings
DEBUG=True
SECRET_KEY='your-secret-key-here'  # Replace with a strong key
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings (PostgreSQL)
DATABASE_URL=postgres://db_user:db_password@db_host:5432/db_name
DB_NAME=ecommerce
DB_USER=postgres
DB_PASSWORD='your-db-password'
DB_HOST=localhost
DB_PORT=5432

# AWS Credentials
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# OpenID Connect Settings (Auth0)
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_DOMAIN=your-domain.us.auth0.com
OIDC_AUTHORIZATION_ENDPOINT=https://your-domain.us.auth0.com/authorize
OIDC_TOKEN_ENDPOINT=https://your-domain.us.auth0.com/oauth/token
OIDC_USER_ENDPOINT=https://your-domain.us.auth0.com/userinfo
OIDC_JWKS_ENDPOINT=https://your-domain.us.auth0.com/.well-known/jwks.json

# Email Settings (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password  # Not your regular password
DEFAULT_FROM_EMAIL=your-email@gmail.com
ADMIN_EMAIL=admin-email@example.com

# Africa's Talking SMS Settings
AFRICASTALKING_USERNAME=your-username
AFRICASTALKING_API_KEY=your-api-key

# Security Settings
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False